<div id="main">
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/transaction">Transactions</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-md">
        <div class="card-body">
            <b>
                <div class="content mt-3">
                    <div class="animated fadeIn">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col">
                                                <strong class="card-title">Transactions</strong>
                                            </div>
                                        </div>
                                    </div>
                                    <table border="0">
                                        <tr>
                                            <th>
                                                <div class="nav-item dropdown card-body float-right">
                                                    <label for="filtering">Filter Transactions By
                                                        Status:</label>
                                                    <select class="filter-status">
                                                        <option value="all">All</option>
                                                        <option value="credit" {{#compare
                                                            search.filterStatus '==' 'credit' }} selected {{/compare}}>
                                                            Credit</option>
                                                        <option value="debit" {{#compare
                                                            search.filterStatus '==' 'debit' }} selected {{/compare}}>
                                                            Debit</option>
                                                    </select>
                                                </div>
                                            </th>
                                            <th>
                                                <div class="nav-item dropdown card-body float-right">
                                                    <label for="filtering">Filter Transactions By Type:</label>
                                                    <select class="filter-type">
                                                        <option value="all">All</option>
                                                        <option value="welcome-bonus" {{#compare
                                                            search.filterType '==' 'welcome-bonus' }} selected
                                                            {{/compare}}>
                                                            Welcome Bonus</option>
                                                        <option value="referral-bonus" {{#compare
                                                            search.filterType '==' 'referral-bonus' }} selected
                                                            {{/compare}}>
                                                            Referral Bonus</option>
                                                        <option value="image-deduction" {{#compare
                                                            search.filterType '==' 'image-deduction' }} selected
                                                            {{/compare}}>
                                                            Image Deduction</option>
                                                    </select>
                                                </div>
                                            </th>
                                            <th>
                                                <div class="nav-item dropdown card-body float-right">
                                                    <input type="button"
                                                        class="btn-danger ml-1 clear-transaction float-right"
                                                        value="Clear" />
                                                    <input type="button"
                                                        class="btn-primary ml-1 search-transaction float-right"
                                                        value="Search" />
                                                    <input type="number" class="search-amount float-right"
                                                        placeholder="Search by Amount"
                                                        value="{{search.searchAmount}}" />
                                                </div>
                                            </th>
                                        </tr>
                                    </table>
                                    <div class="card-body mt-0">
                                        <table id="bootstrap-data-table-export"
                                            class="table table-striped table-bordered">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sort status" value="status" data-flag="ASC" id="status">
                                                        Status<i class="fa fa-sort float-right"></i></th>
                                                    <th>Type</th>
                                                    <th class="sort amount" value="amount" data-flag="ASC" id="amount">
                                                        Amount<i class="fa fa-sort float-right"></i>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody class="transaction-table">
                                                {{#if transactions}}
                                                {{#each transactions}}
                                                <tr>
                                                    <td>{{status}}</td>
                                                    <td>{{type}}</td>
                                                    <td>{{amount}}</td>
                                                </tr>
                                                {{/each}}
                                                {{else}}
                                                <tr>
                                                    <td class="text-center" colspan="3">No Transactions Found</td>
                                                </tr>
                                                {{/if}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- .animated -->
                </div><!-- .content -->
            </b>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            {{#each page}}
            <li class="page-item"><a
                    class="page-link entry-wise {{#compare ../currentPage '==' this}}bg-dark{{/compare}}"
                    href="javascript:void(0);" data-page={{this}}>{{this}}</a>
            </li>
            {{/each}}
        </ul>
    </nav>
    <script src="/javascripts/user/transaction.js"></script>
</div>