<div id="main">
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="javascript:void(0);">Dashboard</a></li>
                        <li><a href="javascript:void(0);">Transactions</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-md">
        <div class="card-body">
            <b>
                <div class="content mt-3">
                    <div class="animated fadeIn">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col">
                                                <strong class="card-title">Transactions</strong>
                                                <input type="button" class="btn-danger ml-1 clear-search float-right"
                                                    value="Clear" />
                                                <input type="button" class="btn-primary ml-1 search-amount float-right"
                                                    value="Search" />
                                                <input type="number" class="search-amount float-right"
                                                    placeholder="Search by Amount" value="{{searchAmount}}" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <li class="nav-item dropdown card-body float-right">
                                                    <label for="filtering">Filter Transactions By Status:</label>
                                                    <select class="filter">
                                                        <option value="all">All</option>
                                                        <option value="credit">Credit</option>
                                                        <option value="debit">Debit</option>
                                                    </select>
                                                </li>

                                                <li class="nav-item dropdown card-body float-right">
                                                    <label for="filtering">Filter Transactions By Type:</label>
                                                    <select class="filter">
                                                    <option value="all">All</option>
                                                    <option value="welcome-bonus">Welcome Bonus</option>
                                                    <option value="referral-bonus">Referral Bonus</option>
                                                    <option value="image-deduction">Image Deduction</option>
                                                </select>
                                                </li>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <table id="bootstrap-data-table-export"
                                            class="table table-striped table-bordered">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sort" value="status" data-flag="ASC" id="status">
                                                        Status<i class="fa fa-sort float-right"></i></th>
                                                    <th class="sort" value="amount" data-flag="ASC" id="amount">Amount<i
                                                            class="fa fa-sort float-right"></i>
                                                    </th>
                                                    <th>Type</i>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody class="transaction-table">
                                                {{#each transactions}}
                                                <tr>
                                                    <td>{{status}}</td>
                                                    <td>{{amount}}</td>
                                                    <td>{{type}}</td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- .animated -->
                </div><!-- .content -->
            </b>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            {{#each page}}
            <li class="page-item"><a class="page-link entry-wise" href="javascript:void(0);"
                    data-page={{this}}>{{this}}</a>
            </li>
            {{/each}}
        </ul>
    </nav>
    <script src="/javascripts/user/transaction.js"></script>
</div>